{
  "name": "gamepad-node",
  "version": "0.1.0",
  "description": "Browser Gamepad API implementation for Node.js with native SDL2 bindings",
  "main": "index.js",
  "type": "module",
  "bin": {
    "gamepad-test": "./bin/cli.js"
  },
  "scripts": {
    "install": "node scripts/install.mjs",
    "download-sdl": "node scripts/download-sdl.mjs",
    "build": "node scripts/build.mjs",
    "build:sdl-mappings": "cd src/javascript/controllers && node build-comprehensive-mappings.js",
    "build:es-db": "cd src/javascript/controllers && node create_db.js",
    "test": "node test/basic.js",
    "test:smoke": "node test/smoke-test.js",
    "test:events": "node test/events-and-rumble.js",
    "test:mapping": "node test/mapping-test.js",
    "docs:controllers": "node scripts/generate-controller-list.mjs"
  },
  "keywords": [
    "gamepad",
    "controller",
    "joystick",
    "sdl",
    "sdl2",
    "native",
    "input",
    "game",
    "browser-api"
  ],
  "author": "Luis Montes",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/monteslu/gamepad-node.git"
  },
  "gypfile": true,
  "dependencies": {
    "@kmamal/build-sdl": "file:../build-sdl",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "xml2js": "^0.6.2",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
